<Page x:Class="OpenBullet.Views.Main.Settings.OpenBullet.Sounds"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OpenBullet.Views.Main.Settings.OpenBullet"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="780"
      Title="OBSettingsSounds">

    <Grid>
        <StackPanel Margin="5">
            <CheckBox Content="Habilitar" IsChecked="{Binding EnableSounds}" VerticalAlignment="Center" VerticalContentAlignment="Center" />
            <Label Content="On-Hit Sound"/>
            <TextBox Text="{Binding OnHitSound}" />
            <Label Content="On-Reload Sound"/>
            <TextBox Text="{Binding OnReloadSound}" />
            <Label Content="NOTA: Los sonidos personalizados deben colocarse en el subdirectorio Sonidos y tener una extensión .wav." Foreground="{DynamicResource ForegroundCustom}"/>
        </StackPanel>
    </Grid>
</Page>
